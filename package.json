{
  "name": "react-native-neutralinojs",
  "version": "1.0.1",
  "description": "React Native CLI integration for Neutralinojs",
  "license": "MIT",
  "type": "commonjs",
  "main": "exports/index.cjs",
  "module": "exports/index.js",
  "scripts": {
    "build:ts": "tsc",
    "build:bundle": "rolldown -c",
    "build": "run-s build:ts build:bundle",
    "prepublishOnly": "run-s build"
  },
  "exports": {
    ".": {
      "import": "./exports/index.js",
      "require": "./exports/index.cjs"
    }
  },
  "author": {
    "name": "Ismael Cortés Gutiérrez",
    "url": "https://github.com/IsmaCortGtz/react-native-neutralinojs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IsmaCortGtz/react-native-neutralinojs.git"
  },
  "files": [
    "react-native.config.cjs",
    "dist/",
    "exports/"
  ],
  "keywords": [
    "react-native",
    "neutralinojs",
    "neu",
    "cross-platform",
    "framework",
    "desktop-framework",
    "lightweight",
    "javascript",
    "desktop",
    "webview",
    "chrome",
    "browser"
  ],
  "peerDependencies": {
    "@neutralinojs/lib": "^6.3.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-native-web": "^0.21.0"
  },
  "dependencies": {
    "@bunchtogether/vite-plugin-flow": "^1.0.2",
    "@neutralinojs/neu": "^11.6.0",
    "@vitejs/plugin-react": "^5.1.1",
    "chalk": "^5.6.2",
    "vite": "^7.2.1",
    "vite-plugin-commonjs": "^0.10.4"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "npm-run-all": "^4.1.5",
    "rolldown": "^1.0.0-beta.51",
    "typescript": "^5.9.3"
  }
}
